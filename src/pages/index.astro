---
export const prerender = true;
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const allVideos = await getCollection('videos');
const recentVideos = [...allVideos]
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())
  .slice(0, 10);
import VideoGrid from '../components/VideoGrid';
import { AstroSeo } from '@astrolib/seo';
import Hero from '../components/Hero.astro';
import Testimonial from '../components/Testimonial.astro';
import Pricing from '../components/Pricing.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';
import Cta from '../components/Cta.astro';
import Rive from '../components/RiveCanvas';
---

<AstroSeo
  title="Home"
  description="Your site description goes here"
  canonical="https://www.tbd.com"
  openGraph={{
    url: 'https://www.tbd.com',
    title: 'Open Graph Title',
    description: 'Open Graph Description',
    images: [
      {
        url: 'https://www.tbd.com/opengraph/social-og.jpg',
        width: 1200,
        height: 630,
        alt: 'Social open graph',
        type: 'image/jpeg',
      },
      {
        url: 'https://www.tbd.com/opengraph/twitter-og.jpg',
        width: 4096,
        height: 4096,
        alt: 'Twitter open graph',
        type: 'image/jpeg',
      },
      { url: 'https://www.tbd.com/opengraph/social-og.jpg' },
      { url: 'https://www.tbd.com/opengraph/twitter-og.jpg' },
    ],
    site_name: 'YourSitesName',
  }}
  twitter={{
    handle: '@meh',
    site: '@meh',
    cardType: 'summary_large_image',
  }}
/>
<Layout title="Welcome to Astro.">
  <Navigation />
  <div class="bg-blue text-white p-4">Blue background</div>
  <div class="bg-purple text-white p-4">Purple background</div>
  <div class="bg-pink text-white p-4">Pink background</div>
  <div class="bg-red text-white p-4">Red background</div>
  <div class="bg-orange text-white p-4">Orange background</div>
  <div class="bg-gradient-to-br from-blue to-purple p-4">
    Blue to Purple Gradient
  </div>
  <div class="bg-gradient-to-tr from-pink to-red p-4">Pink to Red Gradient</div>
  <div class="bg-gradient-to-r from-orange to-red p-4">
    Orange to Red Gradient
  </div>

  <div class="bg-gradient-to-br from-blue to-purple p-4">
    Blue to Purple Gradient
  </div>

  <div class="bg-gradient-to-br from-purple to-pink p-4">
    Purple to Pink Gradient
  </div>

  <div class="bg-gradient-to-br from-pink to-red p-4">Pink to Red Gradient</div>

  <div class="bg-gradient-to-br from-red to-orange p-4">
    Red to Orange Gradient
  </div>

  <div class="bg-gradient-to-br from-orange to-pink p-4">
    Orange to Pink Gradient
  </div>

  <div class="bg-gradient-to-br from-purple to-red p-4">
    Purple to Red Gradient
  </div>
  <nav class="bg-blue py-4">
    <div class="container mx-auto flex justify-between items-center">
      <a href="#" class="text-white font-bold text-lg">My Website</a>
      <ul class="flex items-center">
        <li>
          <a
            href="#"
            class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out"
            >Home</a
          >
        </li>
        <li>
          <a
            href="#"
            class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out ml-8"
            >About</a
          >
        </li>
        <li>
          <a
            href="#"
            class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out ml-8"
            >Services</a
          >
        </li>
        <li>
          <a
            href="#"
            class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out ml-8"
            >Contact</a
          >
        </li>
      </ul>
    </div>
  </nav>
  <!-- <section class="bg-gradient-to-br from-pink to-red py-20"> -->
  <section class="bg-purple py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-white font-bold text-4xl mb-4">
        Welcome to my landing page
      </h1>
      <p class="text-white text-lg mb-8">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      </p>
      <a
        href="#"
        class="bg-orange text-white px-8 py-3 rounded-full font-medium transition duration-300 hover:bg-red"
        >Get Started</a
      >
    </div>
  </section>
  <section class="bg-pink py-20">
    <div class="container mx-auto">
      <div class="flex flex-wrap items-center justify-between">
        <div class="w-full md:w-1/2 px-4 mb-8 md:mb-0">
          <img
            src="https://via.placeholder.com/600x400"
            alt="Product image"
            class="w-full h-auto"
          />
        </div>
        <div class="w-full md:w-1/2 px-4">
          <h2 class="text-blue font-bold text-3xl mb-4">
            Introducing our new product
          </h2>
          <p class="text-blue text-lg mb-8">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi sit
            amet turpis velit. Nulla euismod nisl nec tellus ultricies bibendum.
            Quisque euismod metus non pharetra posuere.
          </p>
          <a
            href="#"
            class="bg-blue text-white px-8 py-3 rounded-full font-medium transition duration-300 hover:bg-purple"
            >Learn More</a
          >
        </div>
      </div>
    </div>
  </section>

  <section class="bg-red py-20">
    <div class="container mx-auto">
      <h2 class="text-white font-bold text-3xl mb-8">
        What our customers are saying
      </h2>
      <div class="flex flex-wrap -mx-4">
        <div class="w-full md:w-1/3 px-4 mb-8">
          <div class="bg-white px-6 py-8 rounded-lg shadow-md">
            <p class="text-gray-600 text-lg mb-4">
              "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi
              sit amet turpis velit. Nulla euismod nisl nec tellus ultricies
              bibendum."
            </p>
            <div class="flex items-center">
              <img
                src="https://via.placeholder.com/64"
                alt="Testimonial author"
                class="w-12 h-12 rounded-full mr-4"
              />
              <div>
                <h4 class="text-gray-800 font-bold mb-2">John Doe</h4>
                <p class="text-gray-600">CEO, XYZ Company</p>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/3 px-4 mb-8">
          <div class="bg-white px-6 py-8 rounded-lg shadow-md">
            <p class="text-gray-600 text-lg mb-4">
              "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi
              sit amet turpis velit. Nulla euismod nisl nec tellus ultricies
              bibendum."
            </p>
            <div class="flex items-center">
              <img
                src="https://via.placeholder.com/64"
                alt="Testimonial author"
                class="w-12 h-12 rounded-full mr-4"
              />
              <div>
                <h4 class="text-gray-800 font-bold mb-2">Jane Doe</h4>
                <p class="text-gray-600">CTO, ABC Company</p>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full md:w-1/3 px-4 mb-8">
          <div class="bg-white px-6 py-8 rounded-lg shadow-md">
            <p class="text-gray-600 text-lg mb-4">
              "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi
              sit amet turpis velit. Nulla euismod nisl nec tellus ultricies
              bibendum."
            </p>
            <div class="flex items-center">
              <img
                src="https://via.placeholder.com/64"
                alt="Testimonial author"
                class="w-12 h-12 rounded-full mr-4"
              />
              <div>
                <h4 class="text-gray-800 font-bold mb-2">Bob Smith</h4>
                <p class="text-gray-600">COO, XYZ Company</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-orange py-20">
    <div class="container mx-auto">
      <div class="flex flex-wrap items-center">
        <div class="w-full md:w-1/2 mb-8 md:mb-0">
          <h2 class="text-white font-bold text-3xl mb-4">
            Ready to get started?
          </h2>
          <p class="text-white text-lg mb-6">
            Sign up now and get a free trial.
          </p>
        </div>
        <div class="w-full md:w-1/2">
          <form class="flex flex-col md:flex-row md:justify-end">
            <input
              type="email"
              placeholder="Enter your email address"
              class="bg-white rounded-l-lg py-4 px-6 mb-4 md:mb-0 md:mr-2 w-full md:w-auto"
            />
            <button
              type="submit"
              class="bg-white rounded-r-lg py-4 px-8 text-orange font-bold hover:bg-gray-200 transition-all duration-300 ease-in-out"
              >Get started</button
            >
          </form>
        </div>
      </div>
    </div>
  </section>

  <footer class="bg-blue text-white py-10">
    <div class="container mx-auto">
      <div class="flex flex-wrap items-center justify-between">
        <div class="w-full md:w-1/3 mb-8 md:mb-0">
          <h3 class="text-xl font-bold mb-4">Contact Us</h3>
          <p class="mb-2"><i class="fas fa-phone mr-2"></i> 555-1234</p>
          <p><i class="fas fa-envelope mr-2"></i> info@example.com</p>
        </div>
        <div class="w-full md:w-1/3 mb-8 md:mb-0">
          <h3 class="text-xl font-bold mb-4">Follow Us</h3>
          <ul class="list-none">
            <li class="mb-2">
              <a
                href="#"
                class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out"
                ><i class="fab fa-twitter mr-2"></i> Twitter</a
              >
            </li>
            <li class="mb-2">
              <a
                href="#"
                class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out"
                ><i class="fab fa-facebook mr-2"></i> Facebook</a
              >
            </li>
            <li>
              <a
                href="#"
                class="text-white hover:text-gray-300 transition-all duration-300 ease-in-out"
                ><i class="fab fa-instagram mr-2"></i> Instagram</a
              >
            </li>
          </ul>
        </div>
        <div class="w-full md:w-1/3">
          <h3 class="text-xl font-bold mb-4">Newsletter</h3>
          <p class="mb-4">
            Sign up for our newsletter to receive updates on new products and
            promotions.
          </p>
          <form class="flex flex-col md:flex-row">
            <input
              type="email"
              placeholder="Enter your email address"
              class="bg-white rounded-l-lg py-4 px-6 mb-4 md:mb-0 md:mr-2 w-full md:w-auto"
            />
            <button
              type="submit"
              class="bg-white rounded-r-lg py-4 px-8 text-blue-darker font-bold hover:bg-gray-200 transition-all duration-300 ease-in-out"
              >Subscribe</button
            >
          </form>
        </div>
      </div>
    </div>
  </footer>

  <div class="grid grid-cols-5 gap-4">
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
  </div>
  <Hero />

  <div class="grid grid-cols-5 gap-4">
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
    <Rive src="/helix.riv" client:only />
  </div>
  <Testimonial />
  <Pricing />
  <Cta />
  <VideoGrid videos={recentVideos} />
  <main>
    <h1>Welcome to <span class="text-gradient">Astra aao</span></h1>
    <p class="instructions">
      To get started, open the directory <code>src/pages</code> in your project.<br
      />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
    </p>
    <ul role="list" class="link-card-grid">
      <Card
        href="https://docs.astro.build/"
        title="Documentation"
        body="Learn how Astro works and explore the official API docs."
      />
      <Card
        href="https://astro.build/integrations/"
        title="Integrations"
        body="Supercharge your project with new frameworks and libraries."
      />
      <Card
        href="https://astro.build/themes/"
        title="Themes"
        body="Explore a galaxy of community-built starter themes."
      />
      <Card
        href="https://astro.build/chat/"
        title="Community"
        body="Come say hi to our amazing Discord community. ❤️"
      />
    </ul>
  </main>
  <Footer />

  <style>
    main {
      margin: auto;
      padding: 1.5rem;
      max-width: 60ch;
    }
    h1 {
      font-size: 3rem;
      font-weight: 800;
      margin: 0;
    }
    .text-gradient {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
    }
    .instructions {
      line-height: 1.6;
      margin: 1rem 0;
      border: 1px solid rgba(var(--accent), 25%);
      background-color: white;
      padding: 1rem;
      border-radius: 0.4rem;
    }
    .instructions code {
      font-size: 0.875em;
      font-weight: bold;
      background: rgba(var(--accent), 12%);
      color: rgb(var(--accent));
      border-radius: 4px;
      padding: 0.3em 0.45em;
    }
    .instructions strong {
      color: rgb(var(--accent));
    }
    .link-card-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 1rem;
      padding: 0;
    }
  </style>
</Layout>

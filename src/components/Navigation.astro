---
const centerLinks = [
  {
    name: 'Blog',
    href: '/blog/1',
    class:
      'px-2 lg:px-6 py-2 md:px-3 test-sm font-medium text-black hover:text-accent-400 lg:ml-auto',
  },
];
const rightLinks = [
  {
    name: 'Sign up',
    href: '/signup',
    class:
      'block px-4 py-2 mt-2 text-sm font-medium text-black md:mt-0 hover:text-accent-400 focus:outline-none focus:shadow-outline',
  },
  {
    name: 'Login',
    href: '/login',
    class:
      'inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-black bg-slate-100 rounded-lg group focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 hover:bg-slate-50 active:bg-slate-200 active:text-accent-400 focus-visible:outline-black',
  },
];
---

<header class="border-b border-black/5 bg-white">
  <div class="w-full mx-auto md:px-12 px-8 max-w-7xl lg:px-16">
    <div
      class="relative flex flex-col w-full py-5 mx-auto md:items-center md:justify-between md:flex-row md:px-6">
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href="/" class="lg:pr-8 text-black inline-flex items-center gap-3">
          Home
        </a>
      </div>
      <nav
        class="flex-col items-center flex-grow hidden md:pb-0 md:flex md:justify-end md:flex-row">
        {
          centerLinks.map((link) => (
            <a class={link.class} href={link.href}>
              {link.name}
            </a>
          ))
        }
        <div class="inline-flex items-center gap-2 list-none lg:ml-auto">
          {
            rightLinks.map((link) => (
              <a class={link.class} href={link.href}>
                {link.name}
              </a>
            ))
          }
        </div>
      </nav>
    </div>
  </div>
</header>
